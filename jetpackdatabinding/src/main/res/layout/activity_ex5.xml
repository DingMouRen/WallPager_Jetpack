<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools">

    <data>
        <import type="com.dingmouren.jetpackdatabinding.ex5.Ex5Activity"/>
        <variable
                name="ex5Activity"
                type="Ex5Activity" />
    </data>

    <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            tools:context=".ex5.Ex5Activity"
            android:orientation="vertical"
            >
        <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="16dp"
                android:textAppearance="@android:style/TextAppearance.Large"
                android:textSize="20sp"
                android:text='@{"0:"+ex5Activity.data[0]}'
                />
        <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="16dp"
                android:textAppearance="@android:style/TextAppearance.Large"
                android:textSize="20sp"
                android:text='@{"1:"+ex5Activity.data[1]}'
                />
        <Button
                android:id="@+id/btn_1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textAppearance="@android:style/TextAppearance.Large"
                android:text="修改0位置的为：小狗狗"
                android:layout_margin="16dp"
                android:onClick="onClick"
                />
        <Button
                android:id="@+id/btn_2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textAppearance="@android:style/TextAppearance.Large"
                android:text="修改1位置的为：20"
                android:layout_margin="16dp"
                android:onClick="onClick"
                />
    </LinearLayout>
</layout>